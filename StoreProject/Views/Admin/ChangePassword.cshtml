@model StoreProject.ViewModel.ChangePasswordViewModel

<h4>Change Password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserId" />           
            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="control-label"></label>
                <input asp-for="@Model.NewPassword" class="form-control" />
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>